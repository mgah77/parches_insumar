            <form string="Factura de Proveedor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="amount_total" readonly="1"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Líneas">
                            <field name="invoice_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree Rectificativas Proveedores -->
    <record id="view_rectificativas_proveedores_tree" model="ir.ui.view">
        <field name="name">account.move.tree.rectificativas.proveedores</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Rectificativas de Proveedores">
                <field name="name"/>
                <field name="invoice_date"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form Rectificativas Proveedores -->
    <record id="view_rectificativas_proveedores_form" model="ir.ui.view">
        <field name="name">account.move.form.rectificativas.proveedores</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <form string="Factura Rectificativa Proveedor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="invoice_date"/>
                        <field name="amount_total" readonly="1"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Líneas">
                            <field name="invoice_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids"/>
                                    <field name="price_subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>

