<odoo>
    <record id="view_account_payment_form_inherit_cheque" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.cheque</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='payment_method_line_id']" position="after">
                <group attrs="{'invisible': [('payment_method_id.name', '!=', 'Cheque')]}">
                    <field name="serie_cheque"/>
                    <field name="banco_cheque_id" options="{'no_create_edit': False}"/>
                    <field name="fecha_cobro"/>
                </group>
            </xpath>                     
        </field>
    </record>

</odoo>