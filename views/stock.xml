<odoo>
    <record model="ir.ui.view" id="stock_picking_kanban_test">
        <field name="name">stock.picking.kanban.test</field>
        <field name="model">stock.pico</field>
        <field name="arch" type="xml">
          <kanban class="oe_background_grey o_kanban_dashboard o_emphasize_colors o_stock_kanban" create="0" group_create="false">
                  <field name="color"/>
                  <field name="code" on_change="1" modifiers="{&quot;readonly&quot;: true, &quot;required&quot;: true}"/>
                  <field name="count_picking_ready" modifiers="{&quot;readonly&quot;: true}"/>
                  <field name="count_picking_draft" modifiers="{&quot;readonly&quot;: true}"/>
                  <field name="count_picking_waiting" modifiers="{&quot;readonly&quot;: true}"/>
                  <field name="count_picking_late" modifiers="{&quot;readonly&quot;: true}"/>
                  <field name="count_picking_backorders" modifiers="{&quot;readonly&quot;: true}"/>
                  <templates>
                    <t t-name="kanban-box">
                    <div t-if="['incoming', 'outgoing', 'internal'].indexOf(record.code.raw_value) &gt; -1" t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}" name="stock_picking">
                      <div t-attf-class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary" t-if="!selection_mode">
                                        <a type="object" name="get_stock_picking_action_picking_type">
                                            <field name="name" modifiers="{&quot;required&quot;: true}"/>
                                        </a>
                                    </div>
                                    <div class="o_primary" t-if="selection_mode">
                                        <field name="name" modifiers="{&quot;required&quot;: true}"/>
                                    </div>
                                    <div class="o_secondary"><field class="o_secondary" name="warehouse_id" modifiers="{&quot;readonly&quot;: true}"/></div>
                                </div>
                                <div class="o_kanban_manage_button_section" t-if="!selection_mode">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                </div>
                            </div>
                    </div>
                    </t>
                  </templates>
              </kanban>

        </field>
    </record>
    <record model="ir.actions.act_window" id="stock_picking_kanban_action_window2">
          <field name="name">Resumen</field>
          <field name="res_model">stock.pico</field>
          <field name="view_mode">kanban</field>
    </record>


  <menuitem name='otro'
            id="kanban_stock"
            sequence="130"
            action="stock_picking_kanban_action_window2"
            parent="stock.menu_stock_root">
  </menuitem>

</odoo>
